<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alert.addb.com.crimealert.MainActivity">

    <Button
        android:id="@+id/view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view crimes"
        android:onClick="viewCrime"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report"
        android:onClick="sendReport"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp" />

    <Button
        android:id="@+id/SOS_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sos"
        android:onClick="sendSOS"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/report_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/SOSstop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop SOS"
        android:onClick="stopSOS"
        android:layout_marginTop="138dp"
        android:layout_below="@+id/report_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
